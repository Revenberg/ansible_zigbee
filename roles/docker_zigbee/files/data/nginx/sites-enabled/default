map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80 default_server;
    server_name _;
    location / {
      alias ./html;
      index index.html;
    }

    location /ui {
      return 301 $scheme://127.0.0.1:1880/ui;
    }
    location /admin {
      return 301 $scheme://127.0.0.1:1880;
    }
}