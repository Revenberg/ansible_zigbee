map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
    listen 80 default_server;
    server_name _;
    location / {
      return 301 $scheme://{{ ansible_ssh_host }}:1880/ui;
    }
    location /admin {
      return 301 $scheme://{{ ansible_ssh_host }}:1880;
    }
}

